---
import Layout from '../layouts/Layout.astro'
import Links from '../components/links.astro'
import { ONLYFOX_LINKS } from '../utils/constants'
---

<Layout title="OnlyFox">
  <div class="h-full flex flex-col items-center justify-center">
    <figure class="sm:max-w-2xl max-w-xs mb-6">
      <img
        src="/anny_flashbang.webp"
        alt="Anny the fox"
      />
    </figure>
    <h2 class="sm:text-6xl text-3xl text-transparent font-extrabold bg-clip-text bg-gradient-to-r from-gray-400 to-pink-300">
      OnlyFox
    </h2>
    <div class="flex gap-5 mt-4">
      <Links
        title='Mega Links'
        links={ONLYFOX_LINKS.Mega}
        id="mega-dropdown"
      />
      <Links
        title="Hic's Compilation"
        links={ONLYFOX_LINKS.Hics}
        id="hic-dropdown"
      />
    </div>
  </div>
</Layout>
