---
interface Props {
  title: string
  links: string[]
  id: string
}

const {
  title,
  links,
  id
} = Astro.props
---

<div class="sm:relative sm:inline-block">
  <input class="hidden peer" type="checkbox" id={id}>
  <label
          for={id}
          class="bg-pink-200 text-pink-600 sm:p-4 p-2 rounded-md border-none cursor-pointer hover:bg-pink-300"
  >
    {title}
  </label>
  <div class="mt-3 peer-checked:block hidden absolute z-[1] bg-pink-200 sm:px-4 rounded-md menu">
    {
      links?.map((link, i) => (
        <a class="py-3 px-4 block text-pink-600 hover:bg-pink-300 rounded-md" href={link}>
          Part {i + 1}
        </a>
      ))
    }
  </div>
</div>
